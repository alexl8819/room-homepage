{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:tailwindcss/recommended"
    ],
    "overrides": [
      {
        "files": ["*.html"],
        "parser": "@angular-eslint/template-parser"
      }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
      "tailwindcss/no-custom-classname": [
        "warn",
        {
          "whitelist": ["attribution"]
        }
      ]
    }
}
